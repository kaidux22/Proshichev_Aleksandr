include head 

body 
    - var book = library[num - 1]
    h2 #{book.title}
    p Автор: #{book.author}
    p Дата выпуска: #{book.dataRelease}

    if book.isTaken == null 
        p В наличие
        if user.userName != "null"
            form(action="takeBook", method="post")
                button(type="submit", name="book", value=num)
                    p Забронировать книгу
    else
        if user.userRights != false
            p Книга была забронирована за пользователем #{book.owner}

        if user.userName == book.owner
            p #{book.period} книгу требуется вернуть!
            form(action="returnBook", method="post")
                button(type="submit", name="book", value=num)
                    p Вернуть книгу
        else
            p Книга появится в наличие #{book.period}

    dialog#update
        form(action="updateBookInfo", method="post")
            label(for="title")
                p Название книги
            input(type="text", value=book.title, name="title") 

            label(for="dataRelease")
                p Дата выпуска
            input(type="text", value=book.dataRelease, name="dataRelease") 

            label(for="author")
                p Автор книги
            input(type="text", value=book.author, name="author") 

            label(for="Owner")
                p Владелец
            input(type="Owner", value=book.owner, name="owner")

            label(for="period") 
                p Период
            input(type="period", value=book.period, name="period")
            br
            
            button(name="book", type="submit", value=num)
                p Сохранить
            
            button(type="button", onclick="window.update.close()")
                p Отменить

    dialog#delete
        p Вы точно уверены, что хотите удалить эту книгу?
            form(action="deleteBook", method="post")
                button(name="book", type="submit", value=num)
                    p да
                button(type="button", onclick="window.delete.close()")
                    p нет

    if user.userRights != false
        button(onclick="window.update.showModal()")
            p Редактировать данные
        button(onclick="window.delete.showModal()")
            p Убрать с полок
