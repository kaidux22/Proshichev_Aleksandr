include head 

body 
    - var book = library[num - 1]
    h2 #{book.title}
    p Автор: #{book.author}
    p Дата выпуска: #{book.dataRelease}

    if book.isTaken == null 
        p В наличие
        if user.userName != "null"
            form(action="takeBook", method="post")
                button(type="submit", name="book", value=num)
                    p Забронировать книгу
    else
        if user.userRights != false
            p Книга была забронирована за пользователем #{book.owner}


        - var days = Math.ceil((Number(book.period) - ms) / (1000 * 60 * 60 * 24))
        if user.userName == book.owner
            p Через #{days} д. книгу требуется вернуть!
            form(action="returnBook", method="post")
                button(type="submit", name="book", value=num)
                    p Вернуть книгу
        else
            p Книга появится в наличие через #{days} д.

    dialog#update
        form(action="updateBookInfo")
            button() 

    dialog#delete
        p Вы точно уверены?

    if user.userRights != false
        button(onclick="window.update.showModal()")
            p Редактировать данные
        button(onclick="window.delete.showModal()")
            p Убрать с полок
